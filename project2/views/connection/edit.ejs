<%- include('../partials/header.ejs')%>
<main>
    <form class="myForm" method="POST" action="/connections/<%= connection.id%>?_method=PUT">
        <div class="form-group"> 
            <label for="type">Type</label>
            <input type="text" id="type" name="type" value="<%= connection.type%>">
        </div>
        <div class="form-group"> 
            <label for="title">Title</label>
            <input type="text" id="title" name="title" value="<%= connection.title%>">
        </div>
        <div class="form-group"> 
            <label for="host">Host</label>
            <input type="text" id="host" name="host" value="<%= connection.host%>"">
        </div>
        <div class="form-group"> 
            <label for="details">Details</label>
            <textarea name="details" id="details"><%= connection.details%></textarea>
        </div>
        <div class="form-group"> 
            <label for="date">Date</label>
            <input type="date" id="date" name="date" value="<%=connection.date%>">
        </div>
        <div class="form-group"> 
            <label for="location">Location</label>
            <input type="text" id="location" name="location" value="<%= connection.location%>">
        </div>
        <div class="form-group"> 
            <label for="start">Start Time</label>
            <input type="time" id="time" name="time" value="<%= connection.time%>">
        </div>
        <div class="form-group"> 
            <label for="end">End Time</label>
            <input type="time" id="endtime" name="endtime" value="<%= connection.endtime%>">
        </div>
        <div class="form-group"> 
            <label for="imgURL">Image URL</label>
            <input type="text" id="imgURL" name="imgURL" value="<%= connection.imgURL%>">
        </div>
        <div>
            <button>Submit</button>
        </div>
    </form>
</main>
    <%- include('../partials/footer.ejs')%>
